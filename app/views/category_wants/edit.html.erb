<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
     <h1 class="text-center text-black">タグ登録（風の人投稿）</h1>  
     <%= bootstrap_form_with(model: @category_want, url: category_want_path, action: :update, local: true) do |f| %>
      <%= f.text_field :tag_name, label:"やりたいこと" %>
      <%= f.submit "登録" %>
     <% end %>
     
     <h5>登録済のタグ</h5>
     <% @category_wants.each do |category_want| %>
     <div>
      <%= category_want.tag_name %>
     <% end %>
     </div> 
    </div>
  </div> 
</div>   