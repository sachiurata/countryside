<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
     <h1 class="text-center text-black">タグ登録（土の人投稿）</h1>  
     <%= bootstrap_form_with(model: @category_issue, url: category_issue_path, action: :update, local: true) do |f| %>
      <%= f.text_field :tag_name, label:"地域課題" %>
      <%= f.submit "登録" %>
     <% end %>
     
     <h5>登録済のタグ</h5>
     <% @category_issues.each do |category_issue| %>
     <div>
      <%= category_issue.tag_name %>
     <% end %>
     </div> 
    </div>
  </div> 
</div>   