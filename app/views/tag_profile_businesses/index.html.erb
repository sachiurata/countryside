         <%= link_to "削除", category_skill_path(category_skill), data: { turbo_method: :delete, turbo_confirm: "削除しますか？" } %> 
         </div>
        <% end %>
       </div> 
      </div>
      <div class="card">
       <div class="card-body">
        <%= render partial: "layouts/tags/tag_form", locals: { model: @category_interest, url: category_interests_path, title: "興味のあること" } %>
        <% @category_interests.each do |category_interest| %>
