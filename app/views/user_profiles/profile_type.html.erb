  <div>
    <%= link_to edit_user_profiles_region_path(current_user.user_profile) do  %>
      <button class="btn btn-success" type="submit">土の人</button>
    <% end %> 
    <%= link_to edit_user_profiles_business_path(current_user.user_profile) do  %> 
     <button class="btn btn-danger" type="submit">風の人</button>
    <% end %>
  </div>
</div> 